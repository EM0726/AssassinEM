#include<stdio.h>
#include<math.h>
int main()
{
	int n,i;
	int a,b,c;
	float p;
	float s;
	scanf("%d",&n); 
	for(i=0;i<n;i++)
	{
		scanf("%d%d%d",&a,&b,&c);
		p=(a+b+c)/2;
		s=sqrt(p*(p-a)*(p-b)*(p-c));
		if(a+b<=c||b+c<=a||c+a<+b)
			printf("error\n");
		else
			printf("%.2f\n",s);
	}
	return 0;
}
